
html, body, div, span, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
abbr, address, cite, code,
del, dfn, em, img, ins, kbd, q, samp,
small, strong, sub, sup, var,
b, i,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, figcaption, figure,
footer, header, hgroup, menu, nav, section, summary,
time, mark, audio, video
  background transparent
  border 0
  font-size 100%
  margin 0
  outline 0
  padding 0
  vertical-align baseline

body
  line-height:1;

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section
  display block

nav ul
  list-style none

blockquote, q
  quotes none

blockquote:before, blockquote:after,
q:before, q:after
  content ''
  content none

a
  background transparent
  font-size 100%
  margin 0
  padding 0
  vertical-align baseline

/* change colours to suit your needs */
ins
    background-color #ff9
    color #000
    text-decoration none

/* change colours to suit your needs */
mark
  background-color #ff9
  color #000
  font-style italic
  font-weight bold

del
  text-decoration line-through

abbr[title], dfn[title]
  border-bottom 1px dotted
  cursor help

table
  border-collapse collapse
  border-spacing 0

/* change border colour to suit your needs */
hr
  border 0
  border-top 1px solid #ccc
  display block
  height 1px
  margin 1em 0
  padding 0

input, select
  vertical-align middle


*
  box-sizing border-box
body,html
  height 100%
  width 100%
  background-color #E6EDF7
  font-family "PT Sans"

.wrapper
  height 100%
  width 100%

#hero
  position relative
  height 300px
  width 100%
  
#hero:before
  position absolute
  width 100%
  height 100%
  content ''
  background-image url(/app/banner.jpg)
  background-size 100% 130%
  background-repeat no-repeat
  background-position left -60px
  -webkit-filter brightness(1.4) sepia(1) brightness(0.6) grayscale(0.7)
  
  
.floater
  height 50px
  width 220px
  text-align center
  line-height 50px
  box-shadow 2px 1px 30px rgba(60, 54, 54, 0.42)
  color #f7f7f7
  font-weight Bold
  font-family "PT Sans"
  font-size 20px
  &:hover
    cursor pointer
  
#signUp
  position absolute
  bottom -20px
  left 60px  
  background-color #deb81b

  
#main
  padding 50px
  height 100%
  width 100%

#optionsHolder
  display flex
  justify-content space-between
  width 100%
  height 280px
  padding-left 50px
  padding-right 50px
  
.option
  width 230px
   
.circle
  display block
  position relative
  top 0
  height 230px
  width 230px
  text-align center
  transition-property top
  transition-duration 0.3s
  &:hover
    cursor pointer
    top -5px
  
.circle:after
  box-sizing border-box
  position absolute
  top 0px
  left 0px
  width 100%
  height 100%
  content ''
  border 3px solid rgba(49, 76, 78, 0.1)
  border-radius 200px
  
.circle:before
  box-sizing border-box
  position absolute
  top 50%
  left 50%
  width 104%
  height 104%
  content ''
  border 5px solid rgba(222, 207, 52, 0.4)
  border-radius 200px
  transform translate(-50%,-50%)
  box-shadow -4px 4px 10px rgba(118, 118, 118, 0.22)
  transition-property box-shadow 
  transition-duration 0.3s
.circle:hover:before
  box-shadow -6px 6px 12px rgba(214, 214, 40, 0.26)
  
.titleHolder
  z-index 2
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  font-size 40px
  font-family Raleway
  font-weight 100
  
a
  text-decoration none
  color #1B9BDE
 
.description
  padding 10px
  margin 0 auto
  text-align center
  width 100%
  height 60px
  font-size 20px
  font-family "Open Sans"
  color #5d5858
  
  
footer
  display flex
  height 500px
  width 100%
  background-color #3F4658
  
.left
  width 70%
  height 100%

.learn
  height 90px
  background-color #1B9BDE
  text-align left
  font-family Raleway
  line-height 90px
  font-size 40px
  font-weight 100
  padding-left 60px
  color #e5dbdb
  &:hover
    cursor pointer
  
.features
  width 100%
  height 100%
  padding 50px
  color #becbcc
  font-size 20px
  
.right
  width 100%
  height 100%

  
