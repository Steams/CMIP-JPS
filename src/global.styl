.circle
  display block
  position relative
  top 0
  height 230px
  width 230px
  text-align center
  transition-property top
  transition-duration 0.3s
  &:hover
    cursor pointer
    top -5px
  
.circle:after
  box-sizing border-box
  position absolute
  top 0px
  left 0px
  width 100%
  height 100%
  content ''
  border 3px solid rgba(49, 76, 78, 0.1)
  border-radius 200px
  
.circle:before
  box-sizing border-box
  position absolute
  top 50%
  left 50%
  width 104%
  height 104%
