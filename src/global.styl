  border 5px solid rgba(222, 207, 52, 0.4)
  border-radius 200px
  transform translate(-50%,-50%)
  box-shadow -4px 4px 10px rgba(118, 118, 118, 0.22)
  transition-property box-shadow 
  transition-duration 0.3s
.circle:hover:before
  box-shadow -6px 6px 12px rgba(214, 214, 40, 0.26)
  
